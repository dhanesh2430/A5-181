#include<stdio.h>
int main()
{
	//declare the variables.
	//row=rows of a matrix.
	//clm=columns of a matrix.
	int i,j,row1,clm1,row2,clm2,sumof;
	
	printf("Enter the number of rows in  matrix:");
	scanf("%d",&row1);
	printf("Enter the number of columns in  matrix:");
	scanf("%d",&clm1);
	/*taking mtx1 as first matrix and mtx2 as second matrix & sum for addition*/
	int mtx1[row1][clm1],mtx2[row1][clm1],sum[row1][clm1];
	for(i=0;i<row1;i++)
	{
		for(j=0;j<clm1;j++)
		{
			printf("Enter the elements of a first matrix [%d][%d]:",i+1,j+1);
			scanf("%d",&mtx1[i][j]);
		}
	}
	printf("The first matrix is:\n");
	for(i=0;i<row1;i++)
	{
		for(j=0;j<clm1;j++)
		{
			printf("\t%d",mtx1[i][j]);	
		}
		printf("\n");
	}


	for(i=0;i<row1;i++)
	{
		for(j=0;j<clm1;j++)
		{
			printf("Enter the elements of a second matrix [%d][%d]:",i+1,j+1);
			scanf("%d",&mtx2[i][j]);
		}
	}
	printf("The second matrix is:\n");
	for(i=0;i<row1;i++)
	{
		for(j=0;j<clm1;j++)
		{
			printf("\t%d",mtx2[i][j]);	
		}
		printf("\n");
	}
		printf("\n");
	    printf("addtion of two matrices :\n");
	for(i=0;i<row1;i++)
	{
		for(j=0;j<clm1;j++)
		{
		sum[i][j] = mtx1[i][j] + mtx2[i][j];
		}
	}
	for(i=0;i<row1;i++)
	{
		for(j=0;j<clm1;j++)
		{
			printf("\t%d",sum[i][j]);
			
		}
		printf("\n");
	}
	
	//process.
	printf("\nThe process behind of addition.\n");
	for(i=0;i<row1;i++)
	{
		for(j=0;j<clm1;j++)
		{	
	
	    printf("elementof mtx1 [%d][%d] +",i+1,j+1);
	    printf(" mtx2[%d][%d]=",i+1,j+1);
	    printf("%d+%d=",mtx1[i][j],mtx2[i][j]);
	    sumof=mtx1[i][j]+mtx2[i][j];
	    printf("%d\n",sumof);
        }  
   }
	return 0;
	
}
